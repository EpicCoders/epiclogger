.row
  .col-md-12.pagecontainer
    .pagetitle
      %h3
        Site Members
        = link_to new_invitation_path(), class: 'btn btn-primary pull-right' do
          = icon('plus')
          Add member
    .clearfix
    %br/
    .panel.panel-default
      %table.table#members-container
        %thead
          %tr
            %th Name
            %th Email
            %th Role
            %th.text-right Actions
        %tbody.websites
          - @members.each do |member|
            %tr
              %td= member.user.name
              %td= member.user.email
              %td= member.role
              %td.text-right
                = link_to ' Delete', "/website_members/#{member.id}", :method => :delete, :remote => "true", data: {confirm: "Are you sure?"}, :class => "delete_website btn btn-danger pull-right fa fa-close"
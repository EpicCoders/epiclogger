.row
  .col-md-12.pagecontainer
    .pagetitle
      %h3
        Site Members
        = link_to new_invitation_path(), class: 'btn btn-primary pull-right' do
          = icon('plus')
          Add member
    .clearfix
    %br/
    .panel.panel-default
      %table.table#members-container
        %thead
          %tr
            %th Name
            %th Email
            %th Role
            %th.text-right Actions
        %tbody.website_members
          %tr.website_member_row{"id"=>1}
            %td.name
            %td.email
            %td.role
            %td.text-right
              = link_to ' Remove member', api_v1_website_members_path(), :method => :delete, :remote => "true", data: {confirm: "Are you sure?"}, :class => "delete_member btn btn-danger pull-right fa fa-close"
.row
  .col-sm-3#error-sidebar
    = render partial: 'errors_sidebar'
  .col-sm-9#error-details
    .header.no-margin
      .row
        .col-xs-1.times_seen
          = @error.times_seen
        .col-xs-8
          %div.message= @error.message
          %ul.list-inline
            %li
              %span.label.label-primary
                = icon('users')
                = @error.users_affected
            %li
              %span.label.label-primary= @error.environment
            %li
              %span.label.label-default= @error.checksum
        .col-xs-3.text-right
          .btn-group
            = paginate @issues, theme: 'next_prev_theme', param_name: :page_issue
    .error-content
      .row
        .col-sm-12
          %h4 Error Message
          %p.lead= @error.message
      .row
        .col-sm-7.col-md-8
          -# exception display
          .panel.panel-default.exception
            .panel-heading Exception
            .panel-body.expand-box
              - @issue.stacktrace_frames.each do |frame|
                %div= frame.get_culprit_string(with_lineno: true)
              %p.read-more.text-center
                %a.btn.btn-default{:href => "#"} View full backtrace

        .col-sm-5.col-md-4
          .panel.panel-default
            .panel-heading Actions
            .panel-body
              %ul.actions
                %li
                  - resolve_text = ('<i class="fa fa-times"></i><span>Unresolve</span>' if !@error.resolved_at.nil?) || '<i class="fa fa-check"></i><span>Resolve</span>' 
                  = link_to raw(resolve_text), resolve_error_path(@error), remote:true, method: :put, id: 'resolve-button'

          .panel.panel-default
            .panel-heading Details
            .panel-body
              %dl
                %dt Occured at
                %dd= @issue.created_at
                %dt First seen at
                %dd= @error.first_seen
                %dt File
                %dd= @error.culprit
                %dt ID
                %dd= @issue.event_id
                %dt Level
                %dd= @error.level
                %dt Logger
                %dd= @error.platform        
    .broadcast
      .row
        .col-sm-12
          - @error.subscribers.each do |subscriber|
            = image_tag subscriber.avatar_url
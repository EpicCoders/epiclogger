.row
  .col-md-12.pagecontainer
    .pagetitle
      %h3 User Websites
    %a.button.btn.btn-primary.fa.fa-plus.pull-right{:href => "/websites/new"}
      Add new site
    .clearfix
    %br/
    .panel.panel-default
      %table.table
        %thead
          %tr
            %th Title
            %th Domain
            %th App Key
            %th App Id
            %th Remove
        %tbody.get-websites.websites
          %tr
            %td.domain
            %td.title
            %td.app_key
            %td.app_id
            %td
              %button.btn.btn-danger.btn-sm.pull-right.fa.fa-close#removeRecord
                Remove
  #filterpanel.col-lg-3.col-md-4.sidepanel
    %h4 Order by
    .panelbox
      .form-group
        %select#sortinput.form-control{:name => "sortinput"}
          %option Last occurrence
          %option Occurrences
          %option Users subscribed
          %option Page
    %h4 Filter
    #filterbox.panelbox
      %form.panel.panel-default
        %h5{"data-target" => "#collapse_page", "data-toggle" => "collapse"}
          Page
          %span.fa.fa-chevron-down
        #collapse_page.collapse
          .checkbox
            %label
              %input{:type => "checkbox", :value => ""}/
              Homepage
          .checkbox
            %label
              %input{:type => "checkbox", :value => ""}/
              Dashboard
          .checkbox
            %label
              %input{:type => "checkbox", :value => ""}/
              Settings
      %form.panel.panel-default
        %h5{"data-target" => "#collapse_os", "data-toggle" => "collapse"}
          Operating Systems
          %span.open.fa.fa-chevron-down
        #collapse_os.collapse
          .checkbox
            %label
              %input{:type => "checkbox", :value => ""}/
              Windows 8
          .checkbox
            %label
              %input{:type => "checkbox", :value => ""}/
              Windows 7
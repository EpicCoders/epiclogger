.row
  .col-sm-9.b-r
    %br/
    %a
      = link_to 'Add New Website', new_website_path(), class: 'btn btn-success m-t-n-xs', target: '_self'
    %br/
    %br/
    .row
      .col-lg-12
        .ibox.float-e-margins
          .ibox-title
          .ibox-content
            %table.table.table-bordered
              %thead
                %tr
                  %th Title
                  %th Domain
                  %th App Key
                  %th App Id
              %tbody.get-websites.websites
                %tr
                  %td.domain
                  %td.title
                  %td.app_key
                  %td.app_id

  #filterpanel.col-lg-3.col-md-4.sidepanel
    %h4 Order by
    .panelbox
      .form-group
        %select#sortinput.form-control{:name => "sortinput"}
          %option Last occurrence
          %option Occurrences
          %option Users subscribed
          %option Page
    %h4 Filter
    #filterbox.panelbox
      %form.panel.panel-default
        %h5{"data-target" => "#collapse_page", "data-toggle" => "collapse"}
          Page
          %span.fa.fa-chevron-down
        #collapse_page.collapse
          .checkbox
            %label
              %input{:type => "checkbox", :value => ""}/
              Homepage
          .checkbox
            %label
              %input{:type => "checkbox", :value => ""}/
              Dashboard
          .checkbox
            %label
              %input{:type => "checkbox", :value => ""}/
              Settings
      %form.panel.panel-default
        %h5{"data-target" => "#collapse_os", "data-toggle" => "collapse"}
          Operating Systems
          %span.open.fa.fa-chevron-down
        #collapse_os.collapse
          .checkbox
            %label
              %input{:type => "checkbox", :value => ""}/
              Windows 8
          .checkbox
            %label
              %input{:type => "checkbox", :value => ""}/
              Windows 7
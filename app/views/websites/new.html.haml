.row
  .col-sm-9.b-r
    %br/
    %h4 Add new website
    %form{:role => "form"}
      .form-group.col-lg-7
        %label
        %h5 Title
        %input.form-control{:placeholder => "insert title", :type => "text"}/
        %h5 Website domain
        %input.form-control{:placeholder => "www.domain.com", :type => "text"}/
        %button.btn.btn-sm.btn-success.pull-right.m-t-n-xs{:type => "button"} Add website
  #filterpanel.col-lg-3.col-md-4.sidepanel
    %h4 Order by
    .panelbox
      .form-group
        %select#sortinput.form-control{:name => "sortinput"}
          %option Last occurrence
          %option Occurrences
          %option Users subscribed
          %option Page
    %h4 Filter
    #filterbox.panelbox
      %form.panel.panel-default
        %h5{"data-target" => "#collapse_page", "data-toggle" => "collapse"}
          Page
          %span.fa.fa-chevron-down
        #collapse_page.collapse
          .checkbox
            %label
              %input{:type => "checkbox", :value => ""}/
              Homepage
          .checkbox
            %label
              %input{:type => "checkbox", :value => ""}/
              Dashboard
          .checkbox
            %label
              %input{:type => "checkbox", :value => ""}/
              Settings
      %form.panel.panel-default
        %h5{"data-target" => "#collapse_os", "data-toggle" => "collapse"}
          Operating Systems
          %span.open.fa.fa-chevron-down
        #collapse_os.collapse
          .checkbox
            %label
              %input{:type => "checkbox", :value => ""}/
              Windows 8
          .checkbox
            %label
              %input{:type => "checkbox", :value => ""}/
              Windows 7

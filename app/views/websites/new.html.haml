#page-background
  .col-lg-8.align-wizard
    %form#wizard-form{:action => "#"}
      %div.steps
        %h3 Add Website
        %section
          .form-group
            %label.control-label Name
            %input#title.form-control.required{:placeholder => "Website name", :type => "text", :name => 'website[title]'}/
          .form-group
            %label.control-label Domain
            %input#domain.form-control.required{:placeholder => "http://www.domain.com", :type => "url", :name => 'website[domain]'}/
        %h3 Chose Platform
        %section
          .col-md-12.pagecontainer
            .pagetitle.text-center
              %h3 Installation and configuration
            .panel.panel-default.codeview
              .panel-heading Client Configuration
              .panel-body
                %h5 To start sending events, configure your client with the following DSN value:
                %pre
                  %code
                    %h5.platform-code https://{app_key}:{app_id}@test-sentry89.herokuapp.com/{id}
                %br/
                %h5 If this is a client that only needs public access (like epiclogger-js), you can use the following public DSN:
                %pre
                  %code
                    %h5.platform-code https://{app_key}@test-sentry89.herokuapp.com/{id}
            .panel.panel-default.tileview
              .panel-heading Platforms
              .panel-body#platform{:style => 'cursor: pointer'}
                %a.tile.text-center.resize-a{:onclick => "$('.steps').steps('next')", :name => "#javascript"}
                  %img.resize-img{:src => image_path("icon_javascript.png")}/
                  %span Javascript
                %a.tile.text-center.resize-a{:onclick => "$('.steps').steps('next')",:name => "#node-js"}
                  %img.resize-img{:src => image_path("icon_nodejs.png")}/
                  %span Node Js
                %a.tile.text-center.resize-a{:onclick => "$('.steps').steps('next')",:name => "#ruby"}
                  %img.resize-img{:src => image_path("icon_ruby.png")}/
                  %span Ruby
                %a.tile.text-center.resize-a{:onclick => "$('.steps').steps('next')",:name => "#python"}
                  %img.resize-img{:src => image_path("icon_python.png")}/
                  %span Python
                %a.tile.text-center.resize-a{:onclick => "$('.steps').steps('next')",:name => "#ios"}
                  %img.resize-img{:src => image_path("icon_ios.png")}/
                  %span IOS
                %a.tile.text-center.resize-a{:onclick => "$('.steps').steps('next')",:name => "#php"}
                  %img.resize-img{:src => image_path("icon_php.png")}/
                  %span PHP
                %a.tile.text-center.resize-a{:onclick => "$('.steps').steps('next')",:name => "#java"}
                  %img.resize-img{:src => image_path("icon_java.png")}/
                  %span Java
            .panel.panel-default.tileview#client-frameworks
              .panel-heading Frameworks
              .panel-body
                %a.tile.text-center.resize-a{:onclick => "$('.steps').steps('next')",:name => '#ruby', :href => "#rails-3"}
                  %img.resize-img{:src => image_path("icon_rails.png")}/
                  %span Rails 3
                %a.tile.text-center.resize-a{:onclick => "$('.steps').steps('next')",:name => '#ruby', :href => "#rails-4"}
                  %img.resize-img{:src => image_path("icon_rails.png")}/
                  %span Rails 4
                %a.tile.text-center.resize-a{:onclick => "$('.steps').steps('next')",:name => '#python', :href => "#django"}
                  %img.resize-img{:src => image_path("icon_django.png")}/
                  %span Django
            %div
              %h5{:style => 'display:inline'} For more information on developing clients and the Sentry API, see the
              %a{:href => '#'}documentation.
        %h3 Configuration
        %section
          = render partial: 'websites/configuration'
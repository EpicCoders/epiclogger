%nav.cbp-spmenu.cbp-spmenu-vertical.cbp-spmenu-left.regular-menu-vertical
  .sidebar-header
    .website-container
      = image_tag("logo_transparent_light.png")
      .pick_wrapper
        %a.picked-website{:href => "#"}= current_website.title
        %ul#websites-sidebar
          - current_user.websites.each do |website|
            = nav_link website.title, '#', {:class=>'title picked', 'data-id'=>website.id, 'onclick'=>'EpicLogger.pickWebsite(this)'}
        .border
        .add-new
          = link_to new_website_path, class: 'title' do
            %i.fa.fa-plus
            Add new Website
  .sidebar-content
    %ul.icon-list
      = nav_link "Errors", errors_url(), {'title' => 'Errors', :id => "errornav"}, 'exclamation-triangle'
      -# = nav_link "Tasks", grouped_issues_url(), {'title' => 'Tasks'}, 'glyphicon glyphicon-hourglass'
      / # = nav_link "User", edit_member_url(1), {'title' => 'Users'}, 'user'
    .project-details
      %h5 PROJECT DETAILS
      %a{:href => "#{installations_url()}"} Installation
      %a{:href => "#{website_members_url()}"} Members

  .footer-help
    %a{:title => 'Help', :href => 'mailto:info@epiclogger.com', :target =>"_top"}
      %i.glyphicon.glyphicon-bullhorn
      %strong Need help?
      %br
      %small Write us an email we will answer fast
    %button.btn.btn-default.btn-link.btn-xs
  .sidebar-footer
    %ul.icon-list
    .footer-content
      %img.profileimg.pull-left{:src => "http://0.gravatar.com/avatar/59b762ebf3d116bf806bcfa3fa12e65f"}/
      .dropup.btn-group
        %a.btn.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
          %i.fa.fa-cog
        %ul.dropdown-menu
          %li
            %a{:href => "#{websites_url()}"} Websites
          / %li
          /   %a{:href => "#"} Account
          %li
            = link_to 'Logout', logout_url, method: :delete
!!!
%html
  %head
    %title Epiclogger

    %meta{:charset => "utf-8"}/
    %meta{:content => "ie=edge", "http-equiv" => "x-ua-compatible"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    %meta{:content => "Engage developers with users to solve errors", :name => "description"}/

    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-eval' => false

    = csrf_meta_tags
  %body{:id=>"#{controller.controller_name}-#{controller.action_name}"}
    = include_gon
    .loading
    #wrapper.main-wrapper
      - if regular_sidebar?
        = render partial: 'layouts/full_sidebar'
      - elsif error_sidebar?
        = render partial: 'layouts/error_sidebar'

      -# page content
      - if no_sidebar?
        = yield
      - else
        #page-content-wrapper
          %a#menu-toggle.btn.btn-link{:href => "#menu-toggle"}
            %i.fa.fa-bars.toggle-left-sidebar
          .container-fluid
            = yield

.row
  .col-md-12.pagecontainer
    .pagetitle
      %h3 Site Settings
    %button.btn.btn-primary.pull-right#saveAppKey
      %span.fa.fa-save
      Save settings
    .clearfix
    %br/
    .panel.panel-default
      .panel-heading
        API Keys
        %button.btn.btn-default.pull-right#generateAppKey
          %span.fa.fa-key
          Generate new key
      .panel-body
        #current-website
          .codeview
            %p.app_id
            .codepanel
              .col-lg-1
                %h5 App Key:
              .col-lg-8
                %p.app_key
              .col-lg-3
                %span.btn.btn-danger.pull-right.glyphicon.glyphicon-erase
                  Revoke
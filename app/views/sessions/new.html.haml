#header
  .container
    .row
      .col-lg-4.col-lg-offset-4.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2
        %h1
          %a{:href => root_path()} Epic Logger
        .panel.panel-default
          %h3 Sign in to your account
          .social
            %a.btn.btn-default.btn-block.signin-github{:href => "/auth/github"}
              %span
              Log in with Github
          %span.or or
          = form_for @user, url: login_path do |f|
            = render 'shared/flash_messages'
            .input-group.username
              .input-group-addon
                %span.glyphicon.glyphicon-user
              = f.text_field :email, :placeholder => 'Email', class: 'form-control input-lg'
            .input-group.password
              .input-group-addon
                %span.glyphicon.glyphicon-lock
              = f.password_field :password, :placeholder => 'Password', class: 'form-control input-lg'
            .row
              .col-md-6
                -# .checkbox
                -#   %label
                -#     %input#remember{:name => "remember", :type => "checkbox"}/
                -#     Remember me
              .col-md-6
                %button.btn.btn-default.btn-block{:type => "submit"} Sign In
                %a.forgotpassword{:href => "#{new_reset_password_url}"} Forgot your password?
          %p.bottom
            No account yet?
            %a{:href => signup_url()} Sign up
    %p.footer Copyright &copy; Epic Logger #{Time.now.strftime("%Y")}. All rights reserved.

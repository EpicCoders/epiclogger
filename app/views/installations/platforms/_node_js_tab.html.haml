.col-md-12.pagecontainer.tab#node_js_tab
  .pagetitle.text-center
    %h3 Configuring Node.js
    = @tab
  #custom-bootstrap.navbar.navbar-default{:role => "navigation"}
    %ul.nav.navbar-nav.navbar-left
      %li{class: @website.platform == 'Node js' ? 'active' : ''}
        = link_to "Node js", wizard_path(:choose_platform, 'tab' => 'node_js'), method: :put
      %li{class: @website.platform == 'Express' ? 'active' : ''}
        = link_to "Express", wizard_path(:choose_platform, 'tab' => 'express'), method: :put
      %li{class: ( @website.platform == 'Connect' ? 'active' : '')}
        = link_to "Connect", wizard_path(:choose_platform, 'tab' => 'connect'), method: :put
  .panel.panel-default.codeview
    .panel-heading
    = render partial: 'installations/platforms/node_js/node_js'
    = render partial: 'installations/platforms/node_js/express'
    = render partial: 'installations/platforms/node_js/connect'
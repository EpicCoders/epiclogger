.col-md-12.pagecontainer.tab#python_tab
  .pagetitle.text-center
    %h3 Configuring Python
    = @tab
  #custom-bootstrap.navbar.navbar-default{:role => "navigation"}
    %ul.nav.navbar-nav.navbar-left
      %li{class: @website.platform == 'Python' ? 'active' : ''}
        = link_to "Python", wizard_path(:choose_platform, 'tab' => 'python'), method: :put
      %li{class: @website.platform == 'Django' ? 'active' : ''}
        = link_to "Django", wizard_path(:choose_platform, 'tab' => 'django'), method: :put
      %li{class: ( @website.platform == 'Flask' ? 'active' : '')}
        = link_to "Flask", wizard_path(:choose_platform, 'tab' => 'flask'), method: :put
      %li{class: @website.platform == 'Tornado' ? 'active' : ''}
        = link_to "Tornado", wizard_path(:choose_platform, 'tab' => 'tornado'), method: :put
  .panel.panel-default.codeview
    .panel-heading
    = render partial: 'installations/platforms/python/python'
    = render partial: 'installations/platforms/python/django'
    = render partial: 'installations/platforms/python/flask'
    = render partial: 'installations/platforms/python/tornado'